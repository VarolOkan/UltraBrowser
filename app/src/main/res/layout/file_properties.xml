<?xml version="1.0" encoding="utf-8"?>

 <ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:fillViewport="true"
        android:background="#4B4B4B">
        
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#4B4B4B" >
    
    
    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:layout_weight="3">
    
     <ImageView android:id="@+id/file_image"
          android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingRight="5dp"/> 
         
     <com.markupartist.android.widget.ScrollingTextView
         android:id="@+id/file_name"
         android:layout_width="wrap_content"
         android:textSize="18dp"
         android:textStyle="bold"
         android:textColor="@color/white"
         android:scrollHorizontally="true"
         android:ellipsize="marquee"
         android:lines="1"
         android:marqueeRepeatLimit="marquee_forever"
         android:layout_height="wrap_content"/>
     
     </LinearLayout>  
         
     <FrameLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/custom_framedivider"
         android:layout_weight="1"/> 
         
      <LinearLayout 
          
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_weight="5">
      
         <LinearLayout 
          android:orientation="horizontal"   
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
            >  
       <TextView
         android:textStyle="bold"   
         android:text="Type :" 
        
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/> 
        <TextView 
           android:id="@+id/file_type"  
            
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
        </LinearLayout>
        
          <LinearLayout 
          android:orientation="horizontal"   
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
            >  
        
         <TextView 
         android:textStyle="bold"
         android:text="Path :" 
        
         android:paddingRight="4dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/> 
         <TextView 
         android:id="@+id/file_path"      
         android:layout_width="wrap_content"
          
         android:layout_marginRight="10dp"
         android:layout_height="wrap_content"
         />
         </LinearLayout>
          <LinearLayout 
          android:orientation="horizontal"   
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
            >  
          
         <TextView 
         android:textStyle="bold"    
         android:text="Contains :" 
      
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/> 
         <TextView 
         android:id="@+id/file_contains"    
             
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         />
         </LinearLayout>
          <LinearLayout 
          android:orientation="horizontal"   
          android:layout_width="match_parent"
          
          android:layout_height="wrap_content"
           >
          <TextView
         android:textStyle="bold"   
         android:text="Size :" 
         
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>   
         <TextView 
         android:id="@+id/file_size"    
           
         android:layout_width="wrap_content"
           
         android:layout_height="wrap_content"
         />
          </LinearLayout>
          
      </LinearLayout>  
      <FrameLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/custom_framedivider"
         android:layout_weight="1"/> 
         
      <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_weight="5">
          <LinearLayout 
          android:orientation="horizontal"   
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
            >   
          <TextView
         android:textStyle="bold"   
         android:text="Modified :" 
         
         android:paddingRight="4dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>   
        <TextView 
         android:id="@+id/file_modified"    
         android:layout_width="wrap_content"
           
         android:layout_marginRight="10dp"
         android:layout_height="wrap_content"/>
        </LinearLayout>
        
         <LinearLayout 
          android:orientation="horizontal"   
          android:layout_width="match_parent"
          android:layout_height="wrap_content" >  
            <TextView
         android:textStyle="bold"   
         android:text="Read :" 
         
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/> 
         <TextView 
          android:id="@+id/file_read_access" 
            
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         />
         </LinearLayout>
          <LinearLayout 
          android:orientation="horizontal"   
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >  
           <TextView
         android:textStyle="bold"   
         android:text="Write :" 
        
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/> 
         <TextView 
         android:id="@+id/file_write_access"   
             
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         />
         </LinearLayout>
          <LinearLayout 
          android:orientation="horizontal"   
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
           >  
          <TextView
         android:textStyle="bold"   
         android:text="Hidden :" 
         
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>   
         <TextView 
         android:id="@+id/file_hidden"  
                  
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         />
         </LinearLayout>
          
          
      </LinearLayout>   
      <FrameLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
            android:background="@drawable/custom_framedivider"
         android:layout_weight="1"/>   
          
     <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_weight="5">
          <LinearLayout 
          android:orientation="horizontal"  
            
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
        >   
         <TextView
         android:textStyle="bold"   
         android:text="Available:" 
         
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/> 
        <TextView 
          android:id="@+id/sdcard_free" 
                
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         />
        </LinearLayout>
        
         <LinearLayout 
          android:orientation="horizontal"   
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
         >  
          <TextView
         android:textStyle="bold"   
         android:text="Total :" 
       
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/> 
         <TextView 
         android:id="@+id/sdcard_total" 
                
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         />
         </LinearLayout>
        
          
      </LinearLayout>   
      

</LinearLayout>
</ScrollView>