<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/icslightblue" android:endColor="@color/icslightblue"
                
                android:angle="270" />
           <stroke android:color="@color/icslightblue" android:width="2dp" />
           <corners android:radius="2dp"/>
            <padding
           
                android:top="10dp"
               
                android:bottom="10dp" />
        </shape>
    </item>

    
    
<item>
<shape android:shape="rectangle">
    
    <gradient android:startColor="@color/icsgrey" android:endColor="@color/icsgrey"
        android:angle="270" />
    
    <corners android:radius="2dp"/>
    
   
    
    <padding  android:top="12dp" android:bottom="12dp" />
    
</shape>
</item>
</selector>